    var lastName = Model == null ? "Прізвище" : Model.ApplicationUser.LastName;
}
<div class="x_panel">
    <div class="x_content">
        <h3 class="pupiloftheweek_title">Учень тижня</h3>
        <div class="flex">
            <ul class="list-inline widget_profile_box">
                <li>
                    <a>
                        @*<i class="fa fa-facebook"></i>*@
                    </a>
                </li>
                <li>
                    <img src="~/Content/user.png" alt="..." class="img-circle profile_img pupil_face">
                </li>
                <li>
                    <a>
                        @*<i class="fa fa-twitter"></i>*@
                    </a>
                </li>
            </ul>
        </div>
        <h3 class="pupiloftheweek_name">@firstName @lastName</h3>
        <div class="flex">
            <ul class="list-inline count2">
                <li>
