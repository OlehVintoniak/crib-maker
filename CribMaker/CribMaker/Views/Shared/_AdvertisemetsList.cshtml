@using CribMaker.Core.Consts
@model IEnumerable<CribMaker.Core.Data.Entities.Advertisement>
@foreach (var advertisement in Model)
{
    <div class="x_panel tile">
        <div class="x_title">
            <h2>@advertisement.DateCreated<sub><small>@advertisement.Pupil.ApplicationUser.FirstName @advertisement.Pupil.ApplicationUser.LastName</small></sub></h2>
            
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                @if (User.IsInRole(Consts.AdminRole))
                {
                    <li>
                        <a href="@Url.Action("Edit", "Advertisements", new { id = advertisement.Id })"><i class="fa fa-edit"></i></a>
                    </li>
                    <li>
                        <a href="@Url.Action("Delete", "Advertisements", new { id = advertisement.Id })"><i class="fa fa-close"></i></a>
                    </li>
                }
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="dashboard-widget-content">
                <div class="bs-example" data-example-id="simple-jumbotron">
                    <div class="jumbotron">
                        <h1>@advertisement.Title</h1>
                        <p style="font-size: 24px">@advertisement.Text</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
