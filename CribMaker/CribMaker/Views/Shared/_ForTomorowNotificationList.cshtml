@model ICollection<CribMaker.Core.Data.Entities.HomeWork>
@if (Model != null && Model.Any())
{
    <li role="presentation" class="dropdown">
        <a href="javascript:;" class="dropdown-toggle info-number" data-toggle="dropdown" aria-expanded="false">
            <i class="fa fa-sticky-note-o" aria-hidden="true"></i>
            <span class="badge bg-red">@Model.Count</span>
        </a>
        <ul id="pass-exam-menu" class="dropdown-menu list-unstyled" role="menu">
            @foreach (var homeWork in Model)
            {
                <li>
                    <a href="@Url.Action("Details","HomeWork", new { id = homeWork.Id })" >
                        <span>@homeWork.Subject.Name</span>
                        <br/>
                        <span class="text-with-dotes">@homeWork.Text</span>
                    </a>
                </li>
            }
        </ul>
    </li>
}